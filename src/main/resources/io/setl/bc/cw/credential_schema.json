{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Credential",
  "description": "A verifiable credential",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "@context",
    "credentialSubject",
    "issuer",
    "type"
  ],
  "properties": {
    "@context": {
      "description": "The JSON-LD context",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "credentialStatus": {
      "description": "Specification of a mechanism to test if this credential is still valid.",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "credentialSubject": {
      "description": "The credential data",
      "type": "object"
    },
    "expirationDate": {
      "description": "The time at which this credential expires",
      "type": "string",
      "format": "date-time"
    },
    "id": {
      "description": "The unique identifier for this credential",
      "type": "string",
      "format": "uri"
    },
    "issuanceDate": {
      "description": "The time at which this credential was issued",
      "type": "string",
      "format": "date-time"
    },
    "issuer": {
      "description": "The issuer of this credential",
      "type": "string",
      "format": "uri"
    },
    "proof": {
      "description": "The cryptographic signature on this credential",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "jws": {
          "description": "The Json Web Signature, if using a JWS style proof",
          "type": "string"
        },
        "type": {
          "description": "The type of proof",
          "type": "string"
        },
        "created": {
          "description": "The time at which this credential was signed",
          "type": "string",
          "format": "date-time"
        },
        "verificationMethod": {
          "description": "The public key in the DID which can be used to verify this proof",
          "type": "string",
          "format": "uri"
        },
        "salt": {
          "description": "Random data to ensure the document is unique",
          "type": "string"
        }
      }
    },
    "type": {
      "description": "Hierarchical specification of the credential type",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
